@model MVC.Samples.Web.Models.RaviUserModel

@{
    ViewBag.Title = "Index";
}

<h2>Register Page</h2>


@using (Html.BeginForm("Index", "Ravi", FormMethod.Post))
{
<table>
    <tr>
        <td>@Html.LabelFor(exp => exp.EmployeeCode)</td>
        <td>@Html.TextBoxFor(exp => exp.EmployeeCode)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Name)</td>
        <td>@Html.TextBoxFor(exp => exp.Name)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Age)</td>
        <td>@Html.TextBoxFor(exp => exp.Age)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Email)</td>
        <td>@Html.TextBoxFor(exp => exp.Email)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.City)</td>
        <td>@Html.DropDownListFor(exp => exp.City, Model.CityList)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Intrested)</td>
        <td>@Html.DropDownListFor(exp => exp.Intrested, Model.InterestedList)</td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" name="btn1" value="Ok" />
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationSummary()
        </td>
    </tr>
</table>
}
