@model MVC.Samples.Web.Areas.Guru.Models.LoginModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
<table>
    <tr>
        <td>@Html.LabelFor(exp => exp.UserName)</td>
        <td>@Html.TextBoxFor(exp => exp.UserName)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Password)</td>
        <td>@Html.PasswordFor(exp => exp.Password)</td>
    </tr>
    <tr>
        <td><label class="text-danger">@ViewBag.ErrorMessage</label></td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" name="btn1" value="Login" />
        </td>
    </tr>
    <tr>
        <td colspan="1">
            @Html.ValidationSummary()
        </td>
    </tr>
</table>
}
