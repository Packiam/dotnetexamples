@model MVC.Samples.Web.Areas.Ravi.Models.LoginModel
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<table>
    <tr>
        <td>@Html.LabelFor(exp => exp.Email)</td>
        <td>@Html.TextBoxFor(exp => exp.Email)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Password)</td>
        <td>@Html.PasswordFor(exp => exp.Password)</td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" name="btn1" value="Ok" />
        </td>
    </tr>

</table>