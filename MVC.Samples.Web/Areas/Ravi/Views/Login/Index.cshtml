@model MVC.Samples.Web.Areas.Ravi.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2 class="control-label col-md-offset-4">Login</h2>
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
<table class="control-label  col-md-offset-4">
    <tr>
        <td>@Html.LabelFor(exp => exp.Name)</td>
        <td>@Html.TextBoxFor(exp => exp.Name)</td>

    </tr>
    <tr>
        <td>@Html.LabelFor(exp => exp.Password)</td>
        <td>@Html.PasswordFor(exp => exp.Password)</td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" name="btn1" value="Login" />
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.ValidationSummary()
        </td>
    </tr>
</table>
}

<label class="text-danger">@ViewBag.ErrorMessage</label>